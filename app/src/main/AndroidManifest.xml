<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_custom_launcher_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_custom_launcher_1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GroceryActivity"/>
        <activity
            android:name=".PantryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UtilityActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NoteListActivity" />
        <activity android:name=".NoteActivity" />
        <activity
            android:name=".GroceryTaskActivity" />
        <provider
            android:name=".data.TaskContentProvider"
            android:authorities="com.example.foodlife.provider"
            android:exported="false" />
        <activity
            android:name=".PantryListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Testing" />
        <activity android:name=".ConversionsActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".addRecipes" />
        <activity android:name=".recipeSuggestionsInput" />
        <activity android:name=".RecipeListView" />
        <activity android:name=".pullRecipe"/>
        <activity android:name=".recipeBook" />

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodlife">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeMainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".GroceryActivity" />
        <activity android:name=".PantryActivity" />
        <activity android:name=".UtilityActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".addRecipes" />
        <activity android:name=".recipeSuggestionsInput" />
        <activity android:name=".ConversionsActivity">
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".RecipeListView" />
        <activity android:name=".pullRecipe" />
        <activity android:name=".recipeBook" />
        <activity android:name=".displayRecipeBook" />
        <activity android:name=".editRecipes"/>
        <activity android:name=".searchRecipes"></activity>
    </application>

</manifest>